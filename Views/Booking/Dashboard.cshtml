@{
    ViewData["Title"] = "Dashboard";
}

<div class="container mt-5">

    <h1 class="mb-4 fw-bold" style="color:#0056B3;">Vehicle Booking Dashboard</h1>

    <div class="row">

        <div class="col-md-6 mb-4">
            <div class="card shadow p-4">
                <h3>📘 Create Booking</h3>
                <p>Book a new vehicle for a customer.</p>
                <a href="/Booking/Create" class="btn btn-primary">New Booking</a>
            </div>
        </div>

        <div class="col-md-6 mb-4">
            <div class="card shadow p-4">
                <h3>📄 View All Bookings</h3>
                <p>See all stored vehicle bookings.</p>
                <a href="/Booking/ViewBookings" class="btn btn-success">View Bookings</a>
            </div>
        </div>

    </div>

</div>

